{
    "name": "razorpay/auth-service",
    "description": "Razorpay's Auth service",
    "keywords": [
        "framework",
        "laravel",
        "lumen"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "rmccue/requests": ">=1.0",
        "vlucas/phpdotenv": "^3.3",
        "razorpay/trace": "3.2.1",
        "laravel/lumen-framework": "^6.0",
        "razorpay/spine": "^1.0.1",
        "razorpay/oauth":"dev-b2f360c90b401e4c66f8f531b5cae375b165d700",
        "razorpay/outbox-php": "v0.2.3",
        "laravel/helpers": "^1.4",
        "ext-json": "*",
        "opencensus/opencensus": "~0.7",
        "opencensus/opencensus-exporter-jaeger": "^v0.1.2-alpha"
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/spine.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/oauth.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/trace.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/metrics-php.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/outbox-php.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/opencensus-php.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/opencensus-php-exporter-jaeger.git"
        }
    ],
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~0.9",
        "kint-php/kint": "1.*",
        "phpunit/phpunit": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
