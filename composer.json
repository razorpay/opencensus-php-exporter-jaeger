{
    "name": "razorpay/auth-service",
    "description": "Razorpay's Auth service",
    "keywords": ["framework", "laravel", "lumen"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "rmccue/requests": ">=1.0",
        "vlucas/phpdotenv": "~2.2",
        "razorpay/trace": "^2.4.5",
        "laravel/lumen-framework": "5.5.*",
        "razorpay/spine": "^0.1.3",
        "razorpay/oauth": "0.1.5"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/spine.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/oauth.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/trace.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:razorpay/metrics-php.git"
        }
    ],
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~0.9",
        "kint-php/kint": "1.*",
        "phpunit/phpunit": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
